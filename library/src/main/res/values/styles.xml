<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Label">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>


    <style name="Label.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Label.Footer" parent="Label.White">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>


    <style name="Label.HeadlineBlueGrey">
        <item name="android:textColor">@color/light_blue_grey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Label.HeadlineWhite" parent="Label.White">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Label.Accent">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Label.Description">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="Button.Flat" parent="Label.Accent">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="EditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/average_value</item>
        <item name="android:drawablePadding">@dimen/medium_value</item>
        <item name="android:background">@drawable/seletor_edittext</item>
    </style>

    <style name="Button.Accent">
        <item name="android:paddingLeft">@dimen/large_value</item>
        <item name="android:paddingRight">@dimen/large_value</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/accent_button_background</item>
    </style>
</resources>
