<resources>


    <style name="Theme.RBKMoney" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryDark">@color/purple_light</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:textAppearance">@style/TextAppearance.RBKMoney.Normal</item>
    </style>

    <style name="RBKMoney" />

    <style name="Button" parent="RBKMoney" />


    <style name="Button.Flat" parent="Button">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.RBKMoney.Accent</item>
    </style>

    <style name="EditText" parent="RBKMoney">
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:background">@drawable/seletor_edittext</item>
    </style>

    <style name="Button.Accent" parent="Button">
        <item name="android:paddingLeft">@dimen/spacing_xxlarge</item>
        <item name="android:paddingRight">@dimen/spacing_xxlarge</item>
        <item name="android:textAppearance">@style/TextAppearance.RBKMoney.Normal.White</item>
        <item name="android:background">@drawable/accent_button_background</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- TextAppearances -->

    <style name="TextAppearance.RBKMoney" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.RBKMoney.Normal" parent="TextAppearance.RBKMoney">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.RBKMoney.Normal.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.RBKMoney.Footer" parent="TextAppearance.RBKMoney.Normal.White">
        <item name="android:textSize">@dimen/xxsmall_text_size</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="TextAppearance.RBKMoney.Title" parent="TextAppearance.RBKMoney.Normal">
        <item name="android:textSize">@dimen/xxxlarge_text_size</item>
    </style>

    <style name="TextAppearance.RBKMoney.Title.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.RBKMoney.Headline" parent="TextAppearance.RBKMoney.Normal">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/xsmall_text_size</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="TextAppearance.RBKMoney.Headline.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.RBKMoney.Headline.BlueLight">
        <item name="android:textColor">@color/blue_light</item>
    </style>

    <style name="TextAppearance.RBKMoney.Headline.BlueGrey">
        <item name="android:textColor">@color/light_blue_grey</item>
    </style>

    <style name="TextAppearance.RBKMoney.Accent" parent="TextAppearance.RBKMoney.Normal">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.RBKMoney.Description" parent="TextAppearance.RBKMoney.Normal">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>

