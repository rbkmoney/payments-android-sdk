<resources>


    <style name="Theme.RBKMoney" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryDark">@color/purple_light</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="RBKMoney"/>

    <style name="Button" parent="RBKMoney"/>


    <style name="Button.Flat" parent="Button">
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="EditText" parent="RBKMoney">
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:background">@drawable/seletor_edittext</item>
    </style>

    <style name="Button.Accent" parent="Button">
        <item name="android:paddingLeft">@dimen/spacing_large</item>
        <item name="android:paddingRight">@dimen/spacing_large</item>
        <item name="android:textAppearance">@style/TextAppearance.White</item>
        <item name="android:background">@drawable/accent_button_background</item>
    </style>


    <!--TextAppearances-->
    <style name="TextAppearance.RBKMoney" parent="TextAppearance.AppCompat"/>

    <style name="TextAppearance.Normal" parent="TextAppearance.RBKMoney">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="TextAppearance.White" parent="TextAppearance.Normal">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Footer" parent="TextAppearance.White">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextAppearance.FooterCaps" parent="TextAppearance.Footer">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/xsmall_text_size</item>
    </style>

    <style name="TextAppearance.HeadlineBlueGrey" parent="TextAppearance.Normal">
        <item name="android:textColor">@color/light_blue_grey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.HeadlineWhite" parent="TextAppearance.White">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Accent" parent="TextAppearance.Normal">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Description" parent="TextAppearance.Normal">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
